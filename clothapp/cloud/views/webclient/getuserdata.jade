doctype html
html(lang='en')
    head
        meta(charset='utf-8')
        meta(http-equiv='X-UA-Compatible', content='IE=edge')
        meta(name='viewport', content='width=device-width, initial-scale=1')
        title ClothApp - Get User Data
        // jQuery
        script(src='https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js')
        // Bootstrap Core CSS
        link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css', type='text/css')
        // Bootstrap Core JavaScript
        script(src='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js')
        // Parse
        script(src='//www.parsecdn.com/js/parse-1.6.12.min.js')
        // Custom scripts
        script(src='/js/webclient/getuserdata.js')
    body
        .container
            h2.text-center User Profile Data
            br
            .row
                .col-sm-6.col-sm-offset-3
                    form.form-horizontal(name='updForm', role='form', method='get', onsubmit='return OnSubmitUserProfileData();')
                        .form-group
                            label.control-label.col-sm-2 Username:
                            .col-sm-10
                                input.form-control(name='username', placeholder='Enter username', required)
                        .form-group
                            .col-sm-offset-2.col-sm-10
                                button.btn.btn-default(type='submit') Get Data
                        br
                        .form-group
                            label.control-label.col-sm-4 Object ID:
                            .col-sm-8
                                input#updObjectID.form-control(placeholder='Object ID')
                        .form-group
                            label.control-label.col-sm-4 Username:
                            .col-sm-8
                                input#updUsername.form-control(placeholder='Username')
                        .form-group
                            label.control-label.col-sm-4 Email:
                            .col-sm-8
                                input#updEmail.form-control(placeholder='Email')
                        .form-group
                            label.control-label.col-sm-4 First Name:
                            .col-sm-8
                                input#updFirstName.form-control(placeholder='First Name')
                        .form-group
                            label.control-label.col-sm-4 Last Name:
                            .col-sm-8
                                input#updLastName.form-control(placeholder='Last Name')
                        .form-group
                            label.control-label.col-sm-4 Birthday:
                            .col-sm-8
                                input#updBirthday.form-control(placeholder='01/01/1900')
            br
            hr
            a(href='/webclient').text-center Home