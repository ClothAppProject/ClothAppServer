doctype html
html(lang='en')
    head
        meta(charset='utf-8')
        meta(http-equiv='X-UA-Compatible', content='IE=edge')
        meta(name='viewport', content='width=device-width, initial-scale=1')
        title ClothApp Test Page
        // Bootstrap Core CSS
        link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css', type='text/css')
        // Bootstrap Core JavaScript
        script(src='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js')
        // jQuery
        script(src='https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js')
    body
        .container
            hr
            h2.text-center Sign Up
            br
            .row
                .col-sm-6.col-sm-offset-3
                    form.form-horizontal(role='form', action='http://clothapp.parseapp.com/test/signup', method='post', enctype='application/x-www-form-urlencoded')
                        .form-group
                            label.control-label.col-sm-2 Username:
                            .col-sm-10
                                input.form-control(name='username', placeholder='Enter your username')
                        .form-group
                            label.control-label.col-sm-2(for='pwd') Password:
                            .col-sm-10
                                input#pwd.form-control(name='password', type='password', placeholder='Enter your password')
                        .form-group
                            label.control-label.col-sm-2(for='email') Email:
                            .col-sm-10
                                input#email.form-control(name='email',type='email', placeholder='Enter your email')
                        .form-group
                            .col-sm-offset-2.col-sm-10
                                button.btn.btn-default(type='submit') Submit
            br
            hr
            
    